<h2>Edit this restaurant</h2>

<%= form_for(@restaurant) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :adress %>
  <%= f.text_field :adress %>

  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.submit %>
<% end %>

<p><%= link_to "Add a review", new_restaurant_review_path(@restaurant) %></p>
<p><%= link_to "Delete this restaurant", restaurant_path, method: :delete, data: { confirm: "Are you sure you want to delete this restaurant?" } %></p>
<p><%= link_to "Back to the list of restaurants", restaurants_path %></p>

