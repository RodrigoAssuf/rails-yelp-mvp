<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.category.upcase %></p>
<p><%= @restaurant.adress %></p>
<p><strong>Reviews:</strong></p>
 <% @restaurant.reviews.each do |review| %>
 <p><%= review.content %></p>
 <p>Rating: <%= review.rating %></p>
 <% end %>


<p><%= link_to "Update this restaurant", edit_restaurant_path %></p>
<p><%= link_to "Back to the list of restaurants", restaurants_path %></p>

